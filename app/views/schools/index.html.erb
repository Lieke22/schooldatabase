<h1>Schools</h1>

<table>
  <thead>
    <tr>
      <th>Naam school</th>
      <th>Adres</th>
      <th>Postcode</th>
      <th>Plaats</th>
      <th>Telefoon</th>
      <th>Email</th>
      <th>Website</th>
      <th>Opmerkingen</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.address %></td>
        <td><%= school.postcode %></td>
        <td><%= school.town %></td>
        <td><%= school.telephone %></td>
        <td><%= school.email %></td>
        <td><%= link_to school.website, school.website %></td>
        <td><%= school.note %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New School', new_school_path %>
