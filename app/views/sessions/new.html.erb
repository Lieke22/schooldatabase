<div class="container">
  <% if flash[:alert] %>
      <p id="notice"><%= flash[:alert] %></p>
  <% end %>
  <%= form_tag do %>
      <fieldset>
        <legend> please log in</legend>
        <div>
          <%= label_tag :name, 'Naam:' %>
          <%= text_field_tag :name, params[:name] %>
        </div>
        <div>
          <%= label_tag :password, 'Paswoord:' %>
          <%= password_field_tag :password, params[:password] %>
        </div>
        <div>
          <%= submit_tag 'Login' %>
        </div>
      </fieldset>
  <% end %>
</div>